@model BookFilterViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-3">
        <form class="mb-3" method="GET" asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2 class="h3">Filter</h2>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Search..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublisherId" class="control-label"></label>
                @Html.DropDownListFor(model => model.PublisherId, new SelectList(ViewBag.PublishersList, "Id", "Name"), "---select---", new { @class = "form-control" })
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                @Html.DropDownListFor(model => model.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name"), "---select---", new { @class = "form-control" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                @Html.DropDownListFor(model => model.RoomId, new SelectList(ViewBag.Rooms, "Id", "Name"), "---select---", new { @class = "form-control" })
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-primary" />
            </div>
        </form>
        <section class="mb-3">
            <h2 class="h3">Export</h2>
            <ul class="list-group">
                <li class="list-group-item">
                    @Html.ActionLink(
                        "Export as CSV",
                        "ExportCsv",
                        Model
                    )
                </li>
                <li class="list-group-item">
                    @Html.ActionLink(
                        "Export as XML",
                        "ExportXML",
                        Model
                    )
                </li>
                <li class="list-group-item">
                    @Html.ActionLink(
                        "Export as JSON",
                        "ExportJSON",
                        Model
                    )
                </li>
            </ul>
        </section>
        <section class="mb-3">
            <h2 class="h3">Import</h2>
            <ul class="list-group">
                <li class="list-group-item">
                    @Html.ActionLink(
                    "Export as CSV",
                    "ExportCsv",
                    Model
                    )
                </li>
                <li class="list-group-item">
                    @Html.ActionLink(
                    "Export as XML",
                    "ExportXML",
                    Model
                    )
                </li>
                <li class="list-group-item">
                    @Html.ActionLink(
                    "Export as JSON",
                    "ExportJSON",
                    Model
                    )
                </li>
            </ul>
        </section>
    </div>
    <section class="col-md-9">
        <div class="d-flex">
            <h1 class="h3">Boooks</h1>
            <p class="ml-auto mr-3"><b>Total Rows: </b>@Model.Books.FirstOrDefault()?.TotalRowsCount</p>
            <p>
                <a asp-action="Create">Create New Book</a>
            </p>
        </div>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>
                        @Html.ActionLink(
                            "Id",
                            "Index",
                            new {
                                SortColumn = "Id",
                                SortDesc = !Model.SortDesc, 
                                TotalRows = Model.TotalRows,
                                Page = Model.Page,
                                PageSize = Model.PageSize,
                                Title = Model.Title,
                                PublisherId = Model.PublisherId,
                                CategoryId = Model.CategoryId,
                                RoomId = Model.RoomId
                            }
                        )
                    </th>
                    <th>
                        @Html.ActionLink(
                        "Title",
                        "Index",
                        new { 
                            SortColumn = "Title", SortDesc = !Model.SortDesc, TotalRows = Model.TotalRows,
                            Page = Model.Page,
                            PageSize = Model.PageSize,
                            Title = Model.Title,
                            PublisherId = Model.PublisherId,
                            CategoryId = Model.CategoryId,
                            RoomId = Model.RoomId
                        }
                        )
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Pages Count
                    </th>
                    <th>
                        Is Available
                    </th>
                    <th>
                        @Html.ActionLink(
                            "Published Date",
                            "Index",
                            new { 
                                SortColumn = "PublishedDate", 
                                SortDesc = !Model.SortDesc, 
                                TotalRows = Model.TotalRows,
                                Page = Model.Page,
                                PageSize = Model.PageSize,
                                Title = Model.Title,
                                PublisherId = Model.PublisherId,
                                CategoryId = Model.CategoryId,
                                RoomId = Model.RoomId 
                            }
                        )
                    </th>
                    <th>
                        Publisher
                    </th>
                    <th>
                        Room
                    </th>
                    <th>
                        Category
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Books)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ISBN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PagesCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsAvailable)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublishedDate)
                        </td>
                        <td>
                            @item.PublisherName
                        </td>
                        <td>
                            @item.RoomName
                        </td>
                        <td>
                            <span class="badge badge-primary">@item.CategoryName</span>
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @Html.ActionLink("Prev. page", "Index", new { 
            Page = Model.Page - 1,
            SortColumn = Model.SortColumn,
            SortDesc = Model.SortDesc,
            TotalRows = Model.TotalRows,
            PageSize = Model.PageSize,
            Title = Model.Title,
            PublisherId = Model.PublisherId,
            CategoryId = Model.CategoryId,
            RoomId = Model.RoomId
        })
        @Html.ActionLink("Next. page", "Index", new { 
            Page = Model.Page + 1, 
            SortColumn = Model.SortColumn,
            SortDesc = Model.SortDesc,
            TotalRows = Model.TotalRows,
            PageSize = Model.PageSize,
            Title = Model.Title,
            PublisherId = Model.PublisherId,
            CategoryId = Model.CategoryId,
            RoomId = Model.RoomId
        })

    </section>
</div>

